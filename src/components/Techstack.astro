<div>
  <div class="pb-10 top-80 bottom--30px bg-bg_black mt-80">
    <h1
      class="font-custom text-snow_white text-6xl relative text-centre py-12 justify-self-center top-30px"
      style="display: flex; justify-content: center; align-items: center;"
    >
      TECHSTACK
    </h1>
    <div class="grid grid-cols-1 sm:grid-cols-1 lg:grid-cols-3 gap-10   mr-10 ml-10 px-6 mt-10">
      <!-- Card 1 -->
      <div class="w-full bg-tech_bg  text-white h-80 rounded-lg  p-6">
        <div class="font-bold text-xl mb-4">Frontend Technologies</div>
        <div class="flex flex-wrap gap-6">
          <img src="/public/html5.png" alt="HTML5" class="lg:w-15 h-14 sm:h-20 w-20" />
          <img src="/public/css3.png" alt="CSS3" class="lg:w-15 h-14 sm:h-20 w-20" />
          <img src="/public/js.png" alt="JavaScript" class="lg:w-15 h-14 sm:h-20 w-20" />
          <img src="/public/react.png" alt="React" class="lg:w-14 h-14 sm:h-20 w-20" />
          <img src="/public/jQuery.png" alt="jQuery" class="lg:w-14 h-14 sm:h-20 w-20" />
        </div>
      </div>
    
      <!-- Card 2 -->
      <div class="w-full bg-tech_bg text-white h-80 rounded-lg p-6">
        <div class="font-bold text-xl mb-4">Backend Technologies</div>
        <div class="flex flex-wrap gap-6">
          <img src="/public/nodejs.svg" alt="Node.js" class="lg:w-14 h-14 sm:h-20 w-20" />
          <img src="/public/express.svg" alt="Express.js" class="lg:w-14 h-14 sm:h-20 w-20" />
        </div>
      </div>
    
      <!-- Card 3 -->
      <div class="w-full bg-tech_bg text-white h-80 rounded-lg p-6">
        <div class="font-bold text-xl mb-4">Databases</div>
        <div class="flex flex-wrap gap-6">
          <img src="/public/mysql.svg" alt="MySQL" class="lg:w-14 h-14 sm:h-20 w-20" />
          <img src="/public/mongo.svg" alt="MongoDB" class="lg:w-14 h-14 sm:h-20 w-20" />
        </div>
      </div>
    
      <!-- Card 4 -->
      <div class="w-full bg-tech_bg text-white h-80 rounded-lg p-6">
        <div class="font-bold text-xl mb-4">Tools</div>
        <div class="flex flex-wrap gap-6">
          <img src="/public/git.svg" alt="Git" class="lg:w-14 h-14 sm:h-20 w-20" />
          <img src="/public/github.svg" alt="GitHub" class="lg:w-14 h-14 sm:h-20 w-20" />
          <img src="/public/figma.svg" alt="Figma" class="lg:w-14 h-14 sm:h-20 w-20" />
        </div>
      </div>
    
